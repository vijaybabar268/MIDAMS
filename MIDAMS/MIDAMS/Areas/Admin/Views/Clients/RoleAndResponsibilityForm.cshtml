@model MIDAMS.Areas.Admin.ViewModels.ClientRoleResponsibilityFormViewModel

@{
    ViewBag.Title = "Role And Responsibility Form";
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("SaveRoleAndResponsibility", "Clients", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    <div class="info">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ClientId)
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.HoId, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.HoId, new SelectList(Model.Hos, "Id", "Name"), "--Select--", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SiteId, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SiteId, new SelectList(Model.Sites, "Id", "Name"), "--Select--", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}