@model MIDAMS.Areas.Admin.ViewModels.DocumentDetailFormViewModel

@{
    ViewBag.Title = "Document Detail Form";
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("SaveDocumentDetail", "Partners", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    <div class="info">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.PartnerId)
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.AdharNo, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.AdharNo, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.AdharName, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.AdharName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.AdharDateOfBirth, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.AdharDateOfBirth, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.AdharAddress, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.AdharAddress, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PanNo, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PanNo, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PanName, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PanName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PanFatherName, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PanFatherName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PanDateOfBirth, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PanDateOfBirth, new { @class = "form-control" })
                </div>
            </div>
        </div>
                
        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}