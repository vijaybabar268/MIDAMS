@model MIDAMS.Areas.Admin.ViewModels.ViewResponsibleSiteViewModel

@{
    ViewBag.Title = "Partner Responsible Site";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="main-block">

    <div class="info">
        <hr />

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.NameOfTheSite, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.NameOfTheSite, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Location, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.SiteCode, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.SiteCode, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.StartDateOfSite, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.StartDateOfSite, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ManagementFeesPercentAmount, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.ManagementFeesPercentAmount, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.TotalBillingValueOfSite, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.TotalBillingValueOfSite, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-md-12 text-center">
                @Html.ActionLink("Back", "ResponsibleSite", "Partners", new { id = Model.PartnerId }, new { @class = "btn btn-primary" })
            </div>
        </div>

    </div>
</div>

<style>
    .form-control {
        border: none;
        background: #fff !important;
        box-shadow: none;
    }
</style>