@model MIDAMS.Areas.Admin.ViewModels.MapEmployeeFormViewModel

@{
    ViewBag.Title = "Map Employee Form";
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("Save", "MapEmployees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="info">
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ClientId, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.ClientId, new SelectList(Model.Clients, "Id", "ClientName"), "--Select--", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmployeeIds, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.EmployeeIds, new SelectList(Model.Employees, "Id", "Firstname"), "--Select--", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">                    
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

