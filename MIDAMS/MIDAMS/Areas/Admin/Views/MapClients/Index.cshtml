@model MIDAMS.Areas.Admin.ViewModels.MapClientsViewModel

@{
    ViewBag.Title = "Map Clients to Partner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int srNo = 1;
}

<h2 class="adminTitle">@ViewBag.Title</h2>

@Html.ActionLink("Map Client", "New", "MapClients", null, new { @class = "btn btn-primary commonNewAddBtn" })

<div class="tableDiv">
    <table class="table table-bordered table-hover table-responsive table-striped">
        <thead>
            <tr>
                <th>Sr</th>
                <th>Partner Name</th>
                <th>Map Clients</th>
                <th style="width: 20%;">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.MapClientsToPartners.GroupBy(c => c.PartnerId, (key, g) => new { ParterId = key, Clients = g.ToList() }))
                {
                    <tr>
                        <td>@srNo</td>
                        <td></td>
                        <td>@item.Clients.Count</td>
                        <td>
                            @Html.ActionLink("View Employees", "ViewEmployees", "MapClients", new { id = item.ParterId }, new { @class = "btn btn-link" }) |
                            @using (@Html.BeginForm("Delete", "Clients", FormMethod.Post, new { style = "display: inline;", onClick = "return confirm('Are you sure you want tp perform this action?')" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.ParterId)

                                <button type="submit" class="btn btn-link">Delete</button>
                            }
                        </td>
                    </tr>
                    srNo++;
                }
            }
        </tbody>
    </table>
</div>

